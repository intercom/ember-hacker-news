<div>
  <a href="{{item.externalUrl}}" data-test-item-title>{{item.title}}</a>
  <div>
    <span>{{item.points}} points by {{item.user}} {{item.timeAgo}}</span>
    <span {{action markAsRead}} class="hide-button" data-test-mark-as-read>
      {{fa-icon 'eye-slash'}}
    </span>
  </div>
  {{#link-to 'item' item.id}} {{item.commentsCount}} Comments{{/link-to}}
</div>
